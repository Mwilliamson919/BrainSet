<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAcc">
    <EditText
        android:id="@+id/editTextUsr"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Username" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Password"
        android:layout_below="@+id/editTextUsr"/>

    <EditText
        android:id="@+id/editTextConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Confirm Password"
        android:layout_below="@+id/editTextPass"/>

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Create Account"
        android:layout_below="@+id/passReq"/>
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Back"
        android:layout_below="@+id/buttonCreate"/>

    <TextView
        android:id="@+id/passReq"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextConfirm"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="At least 1 character, and 1 number. With a minimum amount of 9 total characters. E.g (Password1) "
        android:textColor="@color/black"
        android:textSize="12sp" />


</RelativeLayout>
